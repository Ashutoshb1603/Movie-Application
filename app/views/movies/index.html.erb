
<div class="container">
<%= form_with url: "/movies", method: :get do |form| %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>


<% end %><div class="child"></div></div>

<br>
<br>
<br>

<table class="table table-striped table-bordered table-hover">  <thead>
<thead class="thead-dark">

    <tr>
    
   
    <th scope="col">Poster</th>
    <th scope="col">Title</th>
	  <th scope="col">Budget</th>
    <th scope="col">Genere</th>
    <th scope="col">Language</th>
    <th scope="col">Show</th>
	  <th scope="col">Update</th>
	  <th scope="col">Destroy</th>
    <th colspan="3"></th>


    </tr>
  </thead>
  <tbody>
  
  <% @movies.each do |movie| %>
    <tr>
    <% if movie.image.present?%>
    <td><%= image_tag movie.image, style: 'height:15%;width:20%;margin-bottom:20px;' %></td>
    <%else%>
    <td></td>
    <%end%>
    <td><%= movie.title %></td>
	  <td><%= movie.budget %></td>
    
    <td><%= movie.generes.pluck(:genere_name).join(',') %></td>
    <td><%= movie.languages.pluck(:language_name).join(',') %></td>
    
    <td><%= link_to 'Show', movie %></td>
	  <td><%= link_to "Edit", edit_movie_path(movie) %></td>
    <td><%= button_to "Destroy", movie, :method => :destroy %></td>
    </tr>

	<% end %>


  </tbody>
</table>



<div class="container"><%= paginate @movies %><div class="child"></div></div>


<br>

<div class="container"><%= link_to 'New Movie', new_movie_path, class:"btn btn-success" %>

